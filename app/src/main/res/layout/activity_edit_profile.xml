<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/text_color_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_190sdp"
                android:layout_gravity="start"
                android:background="@drawable/border_header"

                android:orientation="vertical">

<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="?actionBarSize"-->
<!--                    android:background="@android:color/transparent"-->
<!--                    android:gravity="center_vertical">-->

<!--                    <ImageView-->
<!--                        android:id="@+id/backArrow"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginStart="10dp"-->
<!--                        android:background="@drawable/ic_back_icon"-->
<!--                        android:backgroundTint="@color/text_color_white"-->
<!--                        android:padding="5dp" />-->

<!--                    <TextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginStart="10dp"-->
<!--                        android:fontFamily="@font/montserrat_medium"-->
<!--                        android:gravity="center_vertical"-->
<!--                        android:text="@string/edit_profile"-->
<!--                        android:textColor="@android:color/white"-->
<!--                        android:textSize="18sp" />-->

<!--                </LinearLayout>-->
                <LinearLayout
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/transparent">

                    <ImageView
                        android:id="@+id/backArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_back"
                        app:tint="@color/white"/>

                    <com.speed.provider.utills.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"

                        android:text = "@string/edit_profile"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                </LinearLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="@dimen/_64sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/ic_dummy_user"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#FFFFFF"
                    app:civ_shadow_radius="10" />

                <com.speed.provider.utills.MyTextView
                    android:id="@+id/txtHeaderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:text="Rajan Kumar"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/_15sdp" />

                <com.speed.provider.utills.MyTextView
                    android:id="@+id/txtHeaderMob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="+917277834909"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardBackgroundColor="@color/text_color_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/calbg"
                        android:gravity="center_vertical"
                        android:text="@string/name"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cancel_ride_color" />


                <LinearLayout
                    android:id="@+id/layoutAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/calbg"
                        android:gravity="center_vertical"
                        android:text="@string/email"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cancel_ride_color" />

                <LinearLayout
                    android:id="@+id/layoutMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/calbg"
                        android:gravity="center_vertical"
                        android:text="@string/mobile"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/mobile_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cancel_ride_color" />

                <LinearLayout
                    android:id="@+id/layoutService"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:visibility="gone">

                    <com.speed.provider.utills.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_name"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableTint="@color/done_disabled_dark"
                        android:gravity="center_vertical"

                        android:paddingStart="@dimen/_5sdp"
                        android:text="Service type"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <com.speed.provider.utills.MyEditText
                        android:id="@+id/service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableEnd="@drawable/right"
                        android:drawablePadding="@dimen/_15sdp"
                        android:enabled="false"
                        android:gravity="center_vertical|end"
                        android:maxLines="1"
                        android:paddingEnd="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/silgray"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorAccent"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layoutUpdatePwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_10sdp"
                    android:visibility="gone">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/rounded_text_field"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/changePasswordTxt"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:background="@null"
                            android:hint="@string/update_password"
                            android:inputType="textPassword"
                            android:paddingStart="@dimen/_8sdp"
                            android:drawableStart="@drawable/ic_password"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textSize="@dimen/_14sdp" />
                    </com.google.android.material.textfield.TextInputLayout>

<!--                    <com.speed.provider.utills.MyTextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_weight="1"-->
<!--                        android:drawableStart="@drawable/ic_password"-->
<!--                        android:drawablePadding="@dimen/_10sdp"-->
<!--                        android:drawableTint="@color/cancel_ride_color"-->
<!--                        android:gravity="center_vertical"-->

<!--                        android:paddingStart="@dimen/_5sdp"-->
<!--                        android:text="@string/update_password"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textSize="@dimen/_13sdp" />-->

<!--                    <com.speed.provider.utills.MyTextView-->
<!--                        android:id="@+id/changePasswordTxt"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_weight="2"-->
<!--                        android:drawableEnd="@drawable/right"-->
<!--                        android:drawablePadding="@dimen/_15sdp"-->
<!--                        android:gravity="center_vertical|end"-->
<!--                        android:paddingEnd="@dimen/_5sdp"-->
<!--                        android:text="sdv dv"-->
<!--                        android:textSize="@dimen/_11sdp" />-->
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:visibility="gone">

            <Switch
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/bggradient"
                android:checked="true"

                android:drawableStart="@drawable/ic_notification"
                android:drawablePadding="@dimen/_15sdp"

                android:drawableTint="@color/white"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/notifications"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone">

            <com.speed.provider.utills.MyTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/bggradient"
                android:gravity="center"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
        </androidx.cardview.widget.CardView>

        <com.speed.provider.utills.MyButton
            android:id="@+id/saveBTN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/round_shape"
            android:text="@string/update"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>


